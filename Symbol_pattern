   Code:
   #include<stdio.h>
#include<math.h>
int main(){
	int i,j,k;
	for(i=3;i>=-3;i--){
		for(j=1;j<=abs(i);j++){
			printf(" ");
		}
		for(k=3;k>=abs(i);k--){
		    printf("*");	
		}
		printf("\n");
	}
	return 0;
}
