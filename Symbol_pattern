#include<stdio.h>
int main(){
	int i,j;
	//Type 1
	/*for(i=1;i<=5;i++){
		for(j=1;j<=i;j++){
			printf("*");
		}
		printf("\n");
	}*/
	//Type 2
	for(i=5;i>=1;i--){
	for(j=5;j>=i;j--){
	printf("*");
	}
		printf("\n");
	}
	
	return 0;
	
}
