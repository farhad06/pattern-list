Code:
#include<stdio.h>
int main(){
	int i,j,k,l;
	for(i=1;i<=5;i++){
		for(j=5;j>i;j--){
			printf(" ");
		}
		for(k=1;k<=i;k++){
			printf("* ");
		}
		for(l=5;l>i;l--){
			printf(" ");
		}
		printf("\n");
	}
	return 0;
}
