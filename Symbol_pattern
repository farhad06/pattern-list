Code:
#include<stdio.h>
int main(){
	int i,j,k,l;
	for(i=1;i<=5;i++){
		for(j=4;j>=i;j--){
			printf(" ");
		}
		for(k=1;k<=((2*i)-1);k++){
			printf("*");
		}
		for(l=4;l>=i;l--){
			printf(" ");
		}
		printf("\n");
	}
	return 0;
}
